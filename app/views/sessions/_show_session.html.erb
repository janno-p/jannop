<aside><div>
<% unless signed_in? %>
  <ul>
    <li class="google"><%= link_to "Sign in with Google", new_session_path %></li>
  </ul>
<% else %>
  <ul>
    <li class="google"><%= link_to "#{current_user.first_name} #{current_user.last_name}", '#account', :id => 'account-link' %></li>
  </ul>
  
  <div id="account-panel">
    <ul>
      <li><%= link_to 'Main', root_path %></li>
      <li><%= link_to 'Users', users_path %></li>
      <li><%= link_to 'Countries', admin_countries_path %></li>
      <li><%= link_to 'Coins', coins_path %></li>
    </ul>
    <hr />
    <ul>
      <li><%= link_to "Sign out", session_path, action: 'destroy', method: 'delete' %></li>
    </ul>
    <small>Press ESC to close</small>
  </div>
<% end %>
</div></aside>
