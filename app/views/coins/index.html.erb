<%= render partial: 'coin_pager' %>

<% if @latest_coins.count > 0 then %>
<div>
  <h1>Viimased leiud</h1>
  <% @latest_coins.each do |coin| %>
  <div>
    <%= link_to image_tag(coin.image_url), coin %>
    <p>
      <strong><%= link_to coin.country.name, country_path(coin) %></strong></br>
      <strong><%= number_to_currency(coin.nominal_value, unit: '&euro;') %></strong><br />
      (<%= coin.collected_by || 'Teadmata isik' %>)
    </p>
  </div>
  <% end %>
</div>
<% end %>
