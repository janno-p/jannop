<%= render 'coin_pager' %>

<% if @latest_coins.count > 0 then %>
<section class="coins widget">
  <h2>Viimased leiud</h2>
  <div class="anyClass">
    <ul>
      <% @latest_coins.each_with_index do |coin, index| %>
      <li data-index="<%= index %>"><%= render partial: "coin", object: coin %></li>
      <% end %>
    </ul>
  </div>
  <button class="prev">&laquo;</button>
  <button class="next">&raquo;</button>
</section>
<% end %>

